.Subscribe
  flex-grow: 1;
  display: flex;
  justify-content: center;
  &__container
    width 62rem
    padding-top 6rem
  &__heading
    text-align center
    font-size 2.8rem
    line-height 3.4rem
    color var(--primaryColor)
    margin-bottom 4rem
    transition color var(--transition)
  &__form
    display flex
    justify-content flex-start
    align-items stretch
    margin-bottom 1.4rem
  &__input
    max-width 42.2rem
    width 100%
    font-size 1.8rem
    border 0.1rem solid var(--primaryColor)
    background-color var(--secondaryColor)
    color var(--primaryColor)
    padding 2rem 3rem
    opacity 0.4
    transition var(--transition)
    &:focus
      opacity 1
  &__button
    position relative
    max-width 20rem
    width 100%
    text-align center
    font-size 2rem
    font-weight bold
    color var(--secondaryColor)
    background-color var(--primaryColor)
    border none
    padding 2rem 4.8rem
    cursor pointer
    transition var(--transition)
    &:after
      content ''
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      transition 0.3s
    &:hover:after
      background-color rgba(0,0,0,0.1)
  &__alert
    text-align center
    font-size 1.8rem
    color var(--primaryColor)
    //opacity 0.4
    opacity 0
@media (max-width 1000px)
  .Subscribe
    &__container
      padding-top 8rem
    &__heading
      margin-bottom 5rem
    &__form
      justify-content center
    &__input
      max-width 36rem
      font-size 1.6rem
      padding 1.8rem 2.4rem
    &__button
      font-size 1.8rem
      padding 1.6rem 5.2rem

@media (max-width 667px)
  .Subscribe
    &__container
      padding 6.8rem 1.4rem 0
    &__heading
      margin-bottom 4.4rem
    &__form
      display block
    &__input
      text-align center
      max-width none
      width 100%
      font-size 1.4rem
      margin-bottom 2rem
      padding 1.6rem 0
    &__button
      max-width none
      width 100%



